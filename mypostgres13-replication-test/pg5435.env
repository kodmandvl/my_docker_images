export PGHOME=/usr/pgsql-13
export MANPATH=$PGHOME/share/man:$MANPATH
export LD_LIBRARY_PATH=$PGHOME/lib:${LD_LIBRARY_PATH}
export PATH=$PGHOME/bin:$PATH
export PG_PLUGINS_PATH=$PGHOME/lib
export PGPORT=5435
export PGDATA=/pgdata/13/pg${PGPORT}
export TZ="Europe/Moscow"
export PS1="\[\e[33m\][\h:\W]$ \[\e[0m\]"
export PGDATABASE=postgres
export PGUSER=postgres
export PGHOST=127.0.0.1
export PGSSLCERT=${PGDATA}/ssl/client.crt
export PGSSLKEY=${PGDATA}/ssl/client.key
export PGSSLROOTCERT=${PGDATA}/ssl/root.crt
export PGCLIENTENCODING=UTF8
export TZ="Europe/Moscow"
alias reload='$PGHOME/bin/pg_ctl -D $PGDATA reload'
alias status='$PGHOME/bin/pg_ctl -D $PGDATA status'
alias stop='$PGHOME/bin/pg_ctl -D $PGDATA stop'
alias restart='$PGHOME/bin/pg_ctl -D $PGDATA restart -l /home/postgres/pg${PGPORT}.log'
alias start='$PGHOME/bin/pg_ctl -D $PGDATA start -l /home/postgres/pg${PGPORT}.log'
alias errors='ls -t $PGDATA/log/postgresql*.log | head -1 | xargs tail -n 1000 -F | grep -e WARNING -e ERROR -e FATAL'
alias hba='vi $PGDATA/pg_hba.conf'
alias pglog='ls -t $PGDATA/log/postgresql*.log | head -1 | xargs tail -n 1000'
alias hist='history | cut -c8-'
alias vim='vi'